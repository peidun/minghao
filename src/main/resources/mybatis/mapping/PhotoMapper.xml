<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="wang.peidun.mhstudio.dao.PhotoMapper">

    <resultMap id="SysPhotoResultMap" type="Photo">
        <id property="id" column="id" javaType="java.lang.String" jdbcType="VARCHAR"/>
        <result property="username" column="USERNAME" javaType="java.lang.String" jdbcType="VARCHAR"/>
        <result property="password" column="PASSWORD" javaType="java.lang.String" jdbcType="VARCHAR"/>
        <result property="email" column="EMAIL" javaType="java.lang.String" jdbcType="VARCHAR"/>
    </resultMap>

    <insert id="save" parameterType="Photo">
        insert into photo
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">
                id,
            </if>
            <if test="remark != null">
                remark,
            </if>
            <if test="email != null">
                email,
            </if>
            <if test="fileName != null">
                fileName,
            </if>
            <if test="password != null">
                password,
            </if>
            <if test="uploadTime != null">
                uploadTime,
            </if>
            <if test="status != null">
                status,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">
                #{id,jdbcType=VARCHAR},
            </if>
            <if test="remark != null">
                #{remark,jdbcType=VARCHAR},
            </if>
            <if test="email != null">
                #{email,jdbcType=VARCHAR},
            </if>
            <if test="fileName != null">
                #{fileName,jdbcType=VARCHAR},
            </if>
            <if test="password != null">
                #{password,jdbcType=VARCHAR},
            </if>
            <if test="uploadTime != null">
                #{uploadTime,jdbcType=TIMESTAMP},
            </if>
            <if test="status != null">
                #{remark,jdbcType=INTEGER},
            </if>
        </trim>
    </insert>

    <update id="update" parameterType="Photo">
        update photo
        <set>
            <if test="remark != null">
                remark = #{remark,jdbcType=VARCHAR},
            </if>
            <if test="email != null">
                email = #{email,jdbcType=VARCHAR},
            </if>
            <if test="fileName != null">
                fileName = #{fileName,jdbcType=VARCHAR},
            </if>
            <if test="password != null">
                password = #{password,jdbcType=VARCHAR},
            </if>
            <if test="uploadTime != null">
                uploadtime = #{uploadTime,jdbcType=TIMESTAMP},
            </if>
            <if test="status != null">
                status = #{remark,jdbcType=INTEGER},
            </if>
        </set>
        where id = #{id,jdbcType=VARCHAR}
    </update>

    <select id="selectById" resultMap="SysPhotoResultMap">
        select
        *
        from photo
        where id = #{id,jdbcType=VARCHAR}
    </select>

    <select id="getByEmailAndPassword" resultMap="SysPhotoResultMap">
        select
        *
        from photo
        where email = #{email,jdbcType=VARCHAR}
        and password = #{password,jdbcType=VARCHAR}
    </select>

    <select id="getByPassword" resultMap="SysPhotoResultMap">
        select
        *
        from photo
        where password = #{password,jdbcType=VARCHAR}
    </select>
</mapper>